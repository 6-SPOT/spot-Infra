worker_processes auto;

events {
    worker_connections 1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;
    sendfile      on;
    keepalive_timeout 65;

    # SSL ì„¤ì •
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers HIGH:!aNULL:!MD5;

    # ğŸ”¹ HTTP â†’ HTTPS ë¦¬ë””ë ‰ì…˜ ({{ domain }} & {{ subdomain }})
    server {
        listen 80;
        listen [::]:80;
        server_name {{ domain }} {{ subdomain }};

        location / {
            return 301 https://$host$request_uri;
        }
    }

    # ğŸ”¹ {{ domain }} - HTTPS + WebSocket ì§€ì›
    server {
        listen 443 ssl http2;
        listen [::]:443 ssl http2;
        server_name {{ domain }};

        # SSL ì¸ì¦ì„œ
        ssl_certificate "/etc/letsencrypt/live/{{ domain }}/fullchain.pem";
        ssl_certificate_key "/etc/letsencrypt/live/{{ domain }}/privkey.pem";

        # HSTS ë³´ì•ˆ ì„¤ì •
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

        # WebSocket ë° ì¼ë°˜ HTTP ìš”ì²­ ì²˜ë¦¬
        location / {
            proxy_pass http://{{ fe_private }}:3000;  # Frontend í”„ë¼ì´ë¹— IP
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "Upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
        location /api {
            proxy_pass http://{{ be_private }}:8080;  # Backend í”„ë¼ì´ë¹— IP
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "Upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
        location /login/oauth2/code {
            proxy_pass http://{{ be_private }}:8080;  # Backend í”„ë¼ì´ë¹— IP
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "Upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
        location /v3/api-docs {
            proxy_pass http://{{ be_private }}:8080;  # Backend í”„ë¼ì´ë¹— IP
            proxy_http_version 1.1;
            proxy_set_header Upgrade $http_upgrade;
            proxy_set_header Connection "Upgrade";
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }

    # ğŸ”¹ {{ subdomain }} - HTTPS (Vault ì—°ê²°)
    server {
        listen 443 ssl http2;
        listen [::]:443 ssl http2;
        server_name {{ subdomain }};

        # SSL ì¸ì¦ì„œ
        ssl_certificate "/etc/letsencrypt/live/{{ domain }}/fullchain.pem";
        ssl_certificate_key "/etc/letsencrypt/live/{{ domain }}/privkey.pem";

        # HSTS ë³´ì•ˆ ì„¤ì •
        add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;

        # Reverse Proxy to Vault ì„œë²„ (ë¡œì»¬ HTTP)
        location /v1 {
            proxy_pass http://127.0.0.1:8200; # ë¡œì»¬ Vault ì„œë²„
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
        location /ui {
            proxy_pass http://127.0.0.1:8200; # ë¡œì»¬ Vault ì„œë²„
            proxy_set_header Host $host;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded-Proto $scheme;
        }
    }
}

